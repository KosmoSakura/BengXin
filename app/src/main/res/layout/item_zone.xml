<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    tools:ignore="ContentDescription">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_zone_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/sakura_round"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <!--名字-->
            <TextView
                android:id="@+id/item_zone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川从神奈川"
                android:textColor="@color/default_blue"
                android:textSize="16sp"/>

            <!--正文-->
            <TextView
                android:id="@+id/item_zone_describe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="暂时就折腾这么多吧 \n大家关于这个App有什么意见或建议的 欢迎私信或者留言讨论\n这个App永远开源，开源地址在应该会出没在评论的某一层 \n谢谢观看，千樱在此给大家鞠个躬( • ̀ω•́ )✧),"
                android:textColor="@color/default_color"
                android:textSize="16sp"/>

            <!--图片-->
            <ImageView
                android:id="@+id/item_zone_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                />
            <!--<kos.mos.beng.sakura.NoScorllRecyclerView-->
            <!--android:id="@+id/item_zone_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->
            <!--定位-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/ic_gps"/>

                <TextView
                    android:id="@+id/item_zone_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="八重村八重村八重村八重村"
                    android:textColor="@color/default_blue"
                    android:textSize="12sp"/>
            </LinearLayout>
            <!--信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_zone_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:maxLines="1"
                    android:text="1小时前"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_phone_full"/>

                <TextView
                    android:id="@+id/item_zone_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:text="洛基亚N95洛基亚N95"
                    android:textColor="@color/default_gray"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/item_zone_write"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_write"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                android:orientation="vertical"
                android:padding="5dp">
                <!--点赞-->
                <LinearLayout
                    android:id="@+id/item_zone_point_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_point"/>

                    <TextView
                        android:id="@+id/item_zone_point"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="闪光少女✧Kiana,布狼牙，世界第一可爱"
                        android:textColor="@color/default_blue"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/line"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/item_zone_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>