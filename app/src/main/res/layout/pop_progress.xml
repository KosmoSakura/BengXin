<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lay_progress_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <kos.mos.beng.sakura.whorl.WhorlView
        android:id="@+id/progress_wv_p"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:whorlview_circle_colors="#21211d_#AB0006_#21211d_#AB0006"
        app:whorlview_circle_speed="480"
        app:whorlview_parallax="fast"
        app:whorlview_strokeWidth="7"
        app:whorlview_sweepAngle="90"/>


    <TextView
        android:id="@+id/progress_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Message"
        android:textColor="#000000"
        android:textSize="12sp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>