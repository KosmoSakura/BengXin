<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@drawable/rect_rim"
    android:gravity="center_horizontal"
    android:minHeight="135dp"
    android:orientation="vertical">

    <!--标题-->
    <TextView
        android:id="@+id/dia_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="我是标题"
        android:textColor="@color/default_blue"
        android:textSize="16sp"
        />

    <View
        android:id="@+id/dia_line_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_blue"
        />

    <!--中间内容-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:minHeight="90dp"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dia_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/sakura"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/dia_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="小组解散将不可恢复"
            android:textColor="@color/default_blue"
            android:textSize="12sp"
            />

        <EditText
            android:id="@+id/dia_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_rim"
            android:hint="发现新版本"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@color/default_blue"
            android:textSize="12sp"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_blue"
        />

    <!--确定按钮-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dia_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="取消"
            android:textColor="@color/default_blue"
            android:textSize="14sp"
            />

        <View
            android:id="@+id/dia_line_button"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_blue"
            />

        <TextView
            android:id="@+id/dia_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:text="确定"
            android:textColor="@color/default_blue"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>
